<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestForSoftDC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/gray1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="StyleMainTextView">
        <item name="android:layout_marginStart">@dimen/margin_start_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_start_default</item>
        <item name="fontFamily">@font/univiapro_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_main_text</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">@dimen/margin_top_default</item>
    </style>

</resources>