<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_exercise_card_big_bg"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:src="@drawable/image_test_for_item_exercise_card_big"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_exercise_card_big_tv_name_exercise"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/univia_pro_italic"
        android:text="@string/intermediate_cardio_set_1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/item_exercise_card_big_tv_exercise_time"
        app:layout_constraintEnd_toEndOf="@id/item_exercise_card_big_bg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/item_exercise_card_big_bg" />


    <TextView
        android:id="@+id/item_exercise_card_big_tv_exercise_time"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_btn_default"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="@string/_2_min"
        app:layout_constraintBottom_toBottomOf="@+id/item_exercise_card_big_bg"
        app:layout_constraintStart_toStartOf="@+id/item_exercise_card_big_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>