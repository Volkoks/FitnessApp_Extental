<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_activity_image_view_background_the_top_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_bg_exit_screen" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_activity_button_back_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@color/transparent"
        app:icon="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="@id/main_activity_image_view_background_the_top_screen"
        app:layout_constraintTop_toTopOf="@id/main_activity_image_view_background_the_top_screen" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_activity_image_view_main_drawing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/main_activity_text_view_main_screen_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_exit_screen" />

    <TextView
        android:id="@+id/main_activity_text_view_main_screen_text"
        style="@style/StyleMainTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/why_did_you_exit_your_workout"
        app:layout_constraintBottom_toBottomOf="@id/main_activity_image_view_background_the_top_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_activity_image_view_main_drawing" />


    <TextView
        android:id="@+id/main_activity_button_don_t_time"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/bg_btn_default"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/i_don_t_have_time"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/resource_image_emoji_confused"
        app:layout_constraintBottom_toTopOf="@+id/main_activity_button_not_interesting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_image_view_background_the_top_screen" />


    <TextView
        android:id="@+id/main_activity_button_not_interesting"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/bg_btn_gray1"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/i_don_t_have_time"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/resource_image_emoji_sleeping"
        app:layout_constraintBottom_toTopOf="@+id/main_activity_button_hard_for_me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_button_don_t_time"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/main_activity_button_hard_for_me"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/bg_btn_gray1"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/i_don_t_have_time"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/resource_image_emoji_angry"
        app:layout_constraintBottom_toTopOf="@+id/main_activity_button_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_button_not_interesting"
        tools:ignore="UnusedAttribute" />


    <TextView
        android:id="@+id/main_activity_button_continue"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_btn_default"
        android:fontFamily="@font/univiapro_italic"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/text_continue"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnusedAttribute" />
</androidx.constraintlayout.widget.ConstraintLayout>
