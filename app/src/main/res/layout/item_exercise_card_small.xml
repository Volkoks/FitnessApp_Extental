<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_exercise_card_small_bg"
        android:layout_width="@dimen/layout_widht_item_exercise_card_small_bg"
        android:layout_height="@dimen/layout_height_item_exercise_card_small_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_exercise_card_small_img_exercise"
        android:layout_width="@dimen/layout_wight_and_height_item_exercise_card_small_img_exercise"
        android:layout_height="@dimen/layout_wight_and_height_item_exercise_card_small_img_exercise"
        android:background="@drawable/image_test_for_iten_exercise_card_small"
        app:layout_constraintBottom_toBottomOf="@+id/item_exercise_card_small_bg"
        app:layout_constraintStart_toStartOf="@+id/item_exercise_card_small_bg"
        app:layout_constraintTop_toTopOf="@+id/item_exercise_card_small_bg" />

    <TextView
        android:id="@+id/item_exercise_card_small_tv_name_exercise"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_height_item_exercise_card_small_tv_name_exercise"
        android:layout_marginStart="@dimen/margin_start_item_exercise_card_small_tv"
        android:fontFamily="@font/univia_pro_italic"
        android:gravity="center_vertical"
        android:text="@string/jump_rope"
        app:layout_constraintBottom_toTopOf="@id/item_exercise_card_small_tv_exercise_time"
        app:layout_constraintEnd_toEndOf="@+id/item_exercise_card_small_bg"
        app:layout_constraintStart_toEndOf="@+id/item_exercise_card_small_img_exercise"
        app:layout_constraintTop_toTopOf="@id/item_exercise_card_small_bg" />

    <TextView
        android:id="@+id/item_exercise_card_small_tv_exercise_time"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/margin_start_item_exercise_card_small_tv"
        android:layout_marginEnd="@dimen/margin_end_item_exercise_cart_tv_exercise_time"
        android:background="@drawable/bg_btn_gray1"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="@string/_10_min"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/item_exercise_card_small_bg"
        app:layout_constraintEnd_toEndOf="@id/item_exercise_card_small_bg"
        app:layout_constraintStart_toEndOf="@id/item_exercise_card_small_img_exercise"
        app:layout_constraintTop_toBottomOf="@id/item_exercise_card_small_tv_name_exercise" />
</androidx.constraintlayout.widget.ConstraintLayout>